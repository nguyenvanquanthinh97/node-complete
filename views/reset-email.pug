doctype html
html
    head
      style(type="text/css").
        .btn-blue {
          -webkit-border-radius: 5px;
          -moz-border-radius: 5px;
          border-radius: 5px;
          color: #FFFFFF;
          font-family: Open Sans;
          padding: 10px;
          background-color: #253069;
          text-decoration: none;
          display: inline-block;
          cursor: pointer;
        }
        .banner {
          width: '10rem';
          height: '10rem';
          margin: auto;
        }
        .banner-img {
          width: 100%;
          height: 100%;
          object-fit: contain;
        }
    
    body
        h1 Hello, #{username}
        h5 You request reset your password
        a.btn-blue(href=`http://localhost:5000/auth/reset/${token}`, target="_blank") Reset Password
        br